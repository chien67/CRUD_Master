@model IEnumerable<MVC.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách thành viên</h2>

<p>
    @Html.ActionLink("Tạo thành viên mới", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>

@foreach (var person in ViewBag.person) {
    <tr>
        <td>
           @person.Name
        </td>
        <td>
            @person.Phone
        </td>
        <td>
            @person.Address
        </td>
        <td>
            @person.Salary
        </td>
        @*<td>
            @person.Avatar
        </td>*@
        <td>
            @person.DoB
        </td>
        <td>
            @*@person.Gender*@
            @if (person.Gender)
            {
                <p>Nam</p>
            }
            else
            {
                <p>Nữ</p>
            }
        </td>
        <td>
            @Html.ActionLink("Thay đổi", "Edit", new { id = person.Id }, new { @class = "btn btn-primary", @style = "color:white" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = person.Id }, new { @class = "btn btn-success", @style = "color:white" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = person.Id }, new { @class = "btn btn-danger", @style = "color:white" })
        </td>
    </tr>
}

</table>
